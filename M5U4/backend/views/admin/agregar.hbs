<div class="container" style="margin-top: 100px; auto">
  <div class="row">
      <div class="col-6 offset-3">
       <h4>Agregar una nueva novedad</h4>   
    <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
        <div class="mb-3">
                <input type="text" class="form-control" placeholder="Título" name="titulo">
        </div>
        <div class="mb-3">
          <textarea type="text" name="subtitulo" class="form-control" placeholder="Subtítulo"></textarea>
        </div>
        <div class="mb-3">
            <label>Imágen: <input type="file" name="imagen" id="imagen" /></label>
        </div>
        <div class="mb-3">
          <textarea type="text" name="cuerpo" class="form-control" placeholder="Cuerpo"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
    </div>
    {{#if error}}
        <h5>{{message}}</h5>
     {{/if}}
  </div>
</div>  