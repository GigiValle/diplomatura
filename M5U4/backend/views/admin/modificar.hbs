<div class="container" style="margin-top: 50px; auto">
  <div class="row">
      <div class="col-6 offset-3">
       <h4>Modificar una nueva novedad</h4>   
    <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{novedad.id}}" name="id">
        <div class="form-group">
                <input type="text" class="form-control" placeholder="Título" name="titulo" value="{{novedad.titulo}}">
        </div>
        <div class="form-group">
          <textarea type="text" name="subtitulo" class="form-control" placeholder="Subtítulo">{{novedad.subtitulo}}</textarea>
        </div>
        <div class="form-group">
          <p>
            <label>Imágen: <input type="file" name="imagen" id="imagen"/></label>
          </p>
          <p>
            <label><input type="checkbox" name="img_delete" value="1">Eliminar imágen actual?</label>
            <input type="hidden" name="img_original" value="{{novedad.img_id}}">
          </p>
        </div>

        <div class="form-group">
          <textarea type="text" name="cuerpo" class="form-control" placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
    </form>
    </div>
    {{#if error}}
        <h5>{{message}}</h5>
     {{/if}}
  </div>
</div>  