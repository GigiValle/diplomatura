<div class="container" style="margin-top: 50px;">
    <div class="row">
            <div class="col">
        <p class="text-right">Hola {{usuario}} <a class="btn btn-sm btn-danger" href="/admin/login/logout"> Carrar Sesión
        <i class="fa fa-sign-out"></i></a></p>
             </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
         <div class="col-2 text-right">
        <a class="btn btn-success" href="/admin/novedades/agregar">
        <i class="fa fa-plus"></i>Nuevo</a>
             </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-pencil"></i></a>
                           <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-trash"></i></a> 
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

